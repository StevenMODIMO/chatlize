<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="images/LC.png" type="image/x-icon" />
    <link rel="stylesheet" href="css/styles.css" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
    />
    <title>Let's Chat</title>
  </head>
  <body>
    <!-- Start of Navigation bar-->
    <nav>
      <header>
        <img src="images/Letâ€™s Chat.svg" alt="app-logo" />
        <div>
          <i class="bi bi-list" id="menu-bar"></i>
        </div>
      </header>
      <ul class="hide">
        <% if (user) { %>
        <li>
          <i class="bi bi-box-arrow-left" id="list-icons"></i>
          <a href="/auth/logout">Leave</a>
        </li>
        <% } else { %>
        <li>
          <i class="bi bi-box-arrow-in-right" id="list-icons"></i>
          <a href="/auth/login">Login</a>
        </li>
        <% } %>
        <li>
          <i class="bi bi-house" id="list-icons"></i>
          <a href="/">Home</a>
        </li>
        <li>
          <i class="bi bi-person-circle" id="list-icons"></i>
          <a href="/profile">User</a>
        </li>
      </ul>
    </nav>
    <!-- End of Navigation bar-->
    <hr />
    <!-- Start of Home Page -->
    <main>
      <header>
        <h2>Welcome to "Let's Chat"</h2>
        <div>
          <img src="images/Home.svg" alt="" />
          <h1>
            The Chat Platform For People Who Prefer Total Privacy within their
            conversation.
          </h1>
        </div>
        <a href="/auth/login">Join +</a>
      </header>
      <hr />
      <div class="div-one">
        <img src="images/smile.svg" alt="positivity-pic" />
        <h1>Engage Positively In Your Chats to Keep an Open Mind.</h1>
      </div>
      <hr />
      <div class="div-two">
        <img src="images/speech.svg" alt="speech-pic" />
        <h1>The Freedom of Speech You Deserve Within Your Chats.</h1>
      </div>
      <hr />
      <div class="div-three">
        <img src="images/security.svg" alt="security" />
        <h1>
          Your Online Privacy Is Our Responsibility, Always feel Secured When
          using Let's Chat.
        </h1>
      </div>
      <hr />
      <div class="div-four">
        <img src="images/welcome.svg" alt="welcome-pic" />
        <h1>
          Come Join Us in This Wonderful Journey of Connecting With Your Closed
          Ones.
        </h1>
        <a href="/auth/login" class="bounce-link">Join +</a>
      </div>
    </main>
    <hr />
    <footer>
      <p><span>&copy;</span> 2023 Let's Chat LLC.</p>
      <p>All rights reserved.</p>
    </footer>
    <!-- End of Home Page -->

    <script>
      const menu = document.getElementById("menu-bar");
      const ul = document.querySelector("ul");
      const darkBtn = document.getElementById("dark-btn");
      const body = document.querySelector("body");
      const defaultMode = localStorage.setItem("dark-mode", "off");

      menu.addEventListener("click", () => {
        if (ul.classList.contains("hide")) {
          ul.classList.remove("hide");
          ul.classList.add("show");
        } else {
          ul.classList.remove("show");
          ul.classList.add("hide");
        }
      });

      darkBtn.addEventListener("click", () => {
        if (localStorage.getItem("dark-mode") === "off") {
          localStorage.setItem("dark-mode", "on");
          body.classList.add("body");
        } else {
          localStorage.setItem("dark-mode", "off");
          body.classList.remove("body");
        }
      });
    </script>
  </body>
</html>
