<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="images/LC.png" type="image/x-icon" />
    <link rel="stylesheet" href="css/styles.css" type="text/css" />
    <link
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
    />
    <title>New chat</title>
  </head>
  <body>
    <!-- Start of Navigation bar-->
    <nav>
      <header>
        <img src="images/Letâ€™s Chat.svg" alt="app-logo" />
        <div>
          <i class="bi bi-list" id="menu-bar"></i>
        </div>
      </header>
      <ul class="hide">
        <li>
          <i class="bi bi-house" id="list-icons"></i>
          <a href="/">Home</a>
        </li>
        <% if (user) { %>
        <li>
          <i class="bi bi-box-arrow-left" id="list-icons"></i>
          <a href="/logout">Leave</a>
        </li>
        <li class="user">
          <h6><%=user.username.substring(0,5) + "..."%></h6>
          <img src="<%=user.thumbnail%>" alt="user-pic" />
        </li>
        <% } else { %>
        <li>
          <i class="bi bi-box-arrow-in-right" id="list-icons"></i>
          <a href="/login">Login</a>
        </li>
        <% } %>
      </ul>
    </nav>
    <!-- End of Navigation bar-->

    <!-- Start of Main Chat Page -->
    <section class="header">
      <div class="bars bar-one">
        <i class="bi bi-list-ul"></i>
      </div>
      <div class="bars bar-two">
        <i class="bi bi-people"></i>
      </div>
    </section>
    <main class="main">
      <section class="rooms">
        <div class="room-form">
          <form id="create">
            <input type="text" id="room-input" placeholder="Create new Room" autocomplete="off" />
            <button><i class="bi bi-plus-square"></i></button>
          </form>
        </div>
        <div class="user-rooms">
        </div>
        <div class="join-form">
          <form id="join">
            <input type="text" id="join-input" placeholder="Join a room" autocomplete="off" />
            <button><i class="bi bi-box-arrow-in-right"></i></button>
          </form>
        </div>
        <div class="joined-rooms">
        </div>
      </section>
      <section class="chats">
        <h2>Room chats: </h2>
        <div class="room-name"></div>
      </section>
      <section class="intro-chat"></section>
      <div class="room-users">
        <div class="users">
          <h2>Room Users:</h2>
        </div>
      </div>
    </main>
    <!-- End of Main Chat Page-->

    <!-- External Script Files Links Here -->
    <script src="socket.io/socket.io.js"></script>
    <script src="/js/nav.js"></script>
    <script src="/js/chat.js"></script>
    <!-- External Script Files Links Here -->
  </body>
</html>
