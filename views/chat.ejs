<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="images/LC.png" type="image/x-icon" />
    <link rel="stylesheet" href="css/styles.css" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
    />
    <title>New chat</title>
  </head>
  <body> 
    <!-- Start of Navigation bar-->
    <nav>
      <header>
        <img src="images/Letâ€™s Chat.svg" alt="app-logo" />
        <div>
          <i class="bi bi-list" id="menu-bar"></i>
        </div>
      </header>
      <ul class="hide">
        <li>
          <i class="bi bi-house" id="list-icons"></i>
          <a href="/">Home</a>
        </li>
        <% if (user) { %>
        <li>
          <i class="bi bi-box-arrow-left" id="list-icons"></i>
          <a href="/logout">Leave</a>
        </li>
        <li class="user">
          <h6><%=user.username.substring(0,5) + "..."%></h6>
          <img src="<%=user.thumbnail%>" alt="user-pic" />
        </li>
        <% } else { %>
        <li>
          <i class="bi bi-box-arrow-in-right" id="list-icons"></i>
          <a href="/login">Login</a>
        </li>
        <% } %>
      </ul>
    </nav>
    <!-- End of Navigation bar-->

    <!-- Start of Main Chat Page -->
    <div class="bars">
      <div class="bar-one">
        <i class="bi bi-list-task"></i>
      </div>
      <div class="bar-two">
        <i class="bi bi-people"></i>
      </div>
    </div>
    <main class="main">
      <section class="forms">
        <form id="room-form" class="room-form">
          <input type="text" id="room-input" class="room-input" autocomplete="off" />
          <button>Create</button>
        </form>
        <div class="rooms">
          <h2>Your Rooms</h2>
          <div id="rooms">
          </div>
        </div>
        <form id="join-form" class="join-form">
          <input type="text" id="join-input" autocomplete="off" />
          <button>Join</button>
        </form>
        <div id="invited" class="invited">
          <h2>Invited Rooms:</h2>
        </div>
      </section>
      <section class="chats">
        <form id="text">
          <input type="text" id="msg" autocomplete="off">
          <button>Send</button>
        </form>
        <div id="chats">
          <h2>Room Chats: </h2>
        </div>
      </section>
      <section class="room-users">
        <div class="users">
          <h2>Room Users:</h2>
        </div>
      </section>
    </main>

    <!-- End of Main Chat Page-->

    <!-- External Script Files Links Here -->
    <script src="socket.io/socket.io.js"></script>
    <script src="/js/nav.js"></script>
    <script src="/js/chat.js"></script>
    <!-- External Script Files Links Here -->
  </body>
</html>
